{
  "name": "pollsia-backend",
  "version": "1.0.0",
  "description": "Backend API for PollsIA - Automated liquidity pool management on Solana",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node debug-server.js",
    "dev-full": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --max-old-space-size=4096 --expose-gc --gc-interval=100 --optimize-for-size --use-largepages=on dist/index.js",
    "test": "node --max-old-space-size=2048 --expose-gc --gc-interval=50 ./node_modules/.bin/jest tests/PoolService.test.ts tests/errorHandler.test.ts tests/env.test.ts --runInBand",
    "test:coverage": "node --max-old-space-size=2048 --expose-gc --gc-interval=50 ./node_modules/.bin/jest --coverage",
    "test:watch": "node --max-old-space-size=2048 --expose-gc --gc-interval=50 ./node_modules/.bin/jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.8.1",
    "@solana-program/address-lookup-table": "^0.4.0",
    "@solana-program/compute-budget": "^0.4.0",
    "@solana-program/system": "^0.4.0",
    "@solana-program/token": "^0.4.0",
    "@solana/accounts": "^2.0.0-preview.4",
    "@solana/addresses": "^2.0.0-preview.4",
    "@solana/keys": "^2.0.0-preview.4",
    "@solana/rpc": "^2.0.0-preview.4",
    "@solana/rpc-subscriptions": "^2.0.0-preview.4",
    "@solana/signers": "^2.0.0-preview.4",
    "@solana/spl-token": "^0.4.13",
    "@solana/transaction-messages": "^2.0.0-preview.4",
    "@solana/transactions": "^2.0.0-preview.4",
    "@solana/web3.js": "^1.95.2",
    "@supabase/supabase-js": "^2.50.0",
    "axios": "^1.6.5",
    "bullmq": "^5.1.9",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "prisma": "^5.8.1",
    "redis": "^4.6.12",
    "ws": "^8.15.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "@solana/web3.js": "^1.95.2"
  }
}